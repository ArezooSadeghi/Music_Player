<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_song">

    <fragment
        android:id="@+id/navigation_song"
        android:name="com.example.musicplayer.controller.fragment.SongFragment"
        android:label="@string/title_song"
        tools:layout="@layout/fragment_song" />

    <fragment
        android:id="@+id/navigation_artist"
        android:name="com.example.musicplayer.controller.fragment.ArtistFragment"
        android:label="@string/title_artist"
        tools:layout="@layout/fragment_artist" />

    <fragment
        android:id="@+id/navigation_album"
        android:name="com.example.musicplayer.controller.fragment.AlbumFragment"
        android:label="@string/title_album"
        tools:layout="@layout/fragment_album" />

</navigation>